<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.csaper6.lazydragoncatcher">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/dragon_clip_art"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".characterMenu"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".upgrades"
            android:parentActivityName=".characterMenu"></activity>
        <activity android:name=".Settings"
            android:parentActivityName=".characterMenu"></activity>
        <activity android:name=".Credits"
            android:parentActivityName=".Settings"></activity>
    </application>
</manifest>