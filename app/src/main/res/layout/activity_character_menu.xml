<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.csaper6.lazydragoncatcher.characterMenu"
    android:background="#FFFFFF">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DRAGONS"
        android:id="@+id/text_dragons"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"
        android:textSize="48dp"/>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:src="@drawable/dragon_clip_art"


        android:id="@+id/frameLayout"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/button_upgrades"
        android:layout_below="@+id/text_dragon_number"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="96dp"
            android:layout_height="77dp"
            android:id="@+id/discoball"
            android:src="@drawable/snacks"
            android:layout_gravity="center_horizontal|top"
            android:layout_below="@+id/text_dragon_number"
            android:layout_above="@+id/frameLayout"
            android:visibility="invisible" />

        <ImageView
            android:layout_width="152dp"
            android:layout_height="152dp"
            android:id="@+id/image_dragons"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/dragon_clip_art"
            android:layout_gravity="center" />

        <ImageView
            android:layout_width="84dp"
            android:layout_height="82dp"
            android:id="@+id/tv"
            android:layout_gravity="left|center_vertical"
            android:src="@drawable/tv"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/text_dragons"
            android:visibility="invisible" />

        <ImageView
            android:layout_width="101dp"
            android:layout_height="109dp"
            android:id="@+id/minifridge"
            android:layout_gravity="left|bottom"
            android:src="@drawable/minifridge"
            android:visibility="invisible" />

        <ImageView
            android:layout_width="107dp"
            android:layout_height="107dp"
            android:id="@+id/poster"
            android:layout_gravity="left|top"
            android:src="@drawable/poster"
            android:visibility="invisible" />

        <ImageView
            android:layout_width="120dp"
            android:layout_height="77dp"
            android:id="@+id/sofa"
            android:layout_gravity="right|top"
            android:src="@drawable/sofa"
            android:visibility="invisible" />

        <ImageView
            android:layout_width="85dp"
            android:layout_height="44dp"
            android:id="@+id/xbox"
            android:layout_gravity="right|center_vertical"
            android:src="@drawable/xbox"
            android:visibility="invisible" />

        <ImageView
            android:layout_width="109dp"
            android:layout_height="65dp"
            android:id="@+id/pillow"
            android:layout_gravity="center_horizontal|bottom"
            android:src="@drawable/pillow"
            android:visibility="invisible" />

        <ImageView
            android:layout_width="104dp"
            android:layout_height="102dp"
            android:id="@+id/snacks"
            android:layout_gravity="right|bottom"
            android:src="@drawable/snacks"
            android:visibility="invisible" />

    </FrameLayout>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/text_dragon_number"
        android:layout_below="@+id/text_dragons"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"
        android:textSize="24dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UPGRADES"
        android:id="@+id/button_upgrades"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/text_dragon_number" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SETTINGS"
        android:id="@+id/button_settings"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/text_dragon_number" />


</RelativeLayout>
